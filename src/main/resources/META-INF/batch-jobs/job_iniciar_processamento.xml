<job id="job_iniciar_processamento"  xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
	<step id="mudar_status_job_para_em_processamento" next="iniciar_primeira_atividade">
		<batchlet ref="alterarStatusJob">
			<properties>
				<property name="status" value="EM_PROCESSAMENTO" />
				<property name="atividade" value="INICIO" />
			</properties>				
		</batchlet>
	</step>

	<step id="iniciar_primeira_atividade">
		<batchlet ref="iniciarPrimeiraAtividade"/>
	</step>
</job>