<job id="gerar_dados_leitura" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
	<listeners>
		<listener ref="gerarDadosLeituraJobListener"/>
	</listeners>
	<properties>
		<property name="num_particoes" value="10" />
	</properties>
	<step id="pesquisarImoveisParaPreFaturamento">
		<chunk checkpoint-policy="item" item-count="8">
			<reader ref="preGerarDadosLeitura">
				<properties>
					<property name="primeiroItem" value="#{partitionPlan['primeiroItem']}" />
					<property name="numItens" value="#{partitionPlan['numItens']}" />
				</properties>
			</reader>
			<processor ref="gerarDadosLeitura" />
			<writer ref="posGerarDadosLeitura" />
		</chunk>
		<partition>
			<mapper ref="particaoGerarDadosLeitura" />
		</partition>
	</step>
</job>

